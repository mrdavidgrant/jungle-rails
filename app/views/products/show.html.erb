<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

  </article>
  <article>
  <h2>Reviews</h2>
  <% if @reviews.length == 0 %>
  <h3>Be the first to write a review!</h3>
  <% end %>
    <% if logged_in? %>
    <%= render 'products/post_revue' %>
    <% end %>
  <% if @reviews.length > 0  %> 
  <table class="table table-bordered">
  <thead>
    <tr>
      <th>User</th>
      <th>Rating</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
 
    <%= render @reviews %>
    
  </tbody>
  <% end %>
  
</section>
