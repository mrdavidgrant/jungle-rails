
<% if line_item = LineItem.find_by(id: id) %>
  
  <tr>
    <td>
      <%= image_tag line_item.product.image.tiny %>
    </td>
    <td>
      <h4><%= line_item.product.name %></h4>
      <br>
      <p><%= line_item.product.description %></p>
    </td>
    <td>
      <%= line_item.item_price_cents.to_i / 100 %>
    </td>
    <td>
      <%= line_item.quantity %>
    </td>
    <td>
      <%= line_item.total_price_cents.to_i / 100 %>
    </td>
  </tr>
<% end %>
